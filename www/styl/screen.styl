@import prefixes
@import colors
@import basics
.bydleni
    position absolute
    top 0px
    left 0px
    bottom 0px
    width 100%
    overflow hidden
svg
    g.line
        path
            stroke HNBlue
        &:first-child path
            stroke #e41a1c
        &:nth-child(2) path
            stroke #377eb8
        &:nth-child(3) path
            stroke #4daf4a
        path.line
            fill none
            stroke-width 1px
            stroke-dasharray 5 2

    g.regions
        g.region:first-child
            path
                stroke-dasharray none
    g.axis
        text
            fill #555
            font-size 0.8em
        line
            stroke #ccc
            stroke-width 1px
            shape-rendering crispEdges
        path
            shape-rendering crispEdges
            fill none
            stroke #ccc
            stroke-width 1px
